  @{
    Layout = "_Layout";
  }
  <body class="p-3 m-4">
    <div class="container">
      <h1>Please use the form below to add a new Vendor</h1>
      <form action="/vendors" method="post">
        <label for="vendorName" class="form-label">Vendor Name:</label>
        <input id="vendorName" name="vendorName" type="text" class="form-control" placeholder="Vendor Name Here!" required><br>
        <label for="vendorDescription" class="form-label">Vendor Information:</label>
        <input id="vendorDescription" name="vendorDescription" type="text" class="form-control" placeholder="About Your Company" required><br>
        <button type="submit" class="btn btn-primary">Add Vendor</button>
      </form><br>
      <p><a href="/vendors">Click here to go back to Pierres Vendor's List</a></p>
      <p><a href="/">Back to Home</a></p>
    </div>
  </body>
</html>