  @{
    Layout = "_Layout";
  }
  <body class="p-3 m-5">
    @using PierresVendors.Models;

    <h3>Here are all the current orders for @Model["vendor"].Name:</h3>
    <p><em>(Click order title to view full details)</em></e></p>

    <ol>
    @foreach (Order order in @Model["orders"])
    {  
      <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li>
    }
    </ol>

    <p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
    <p><a href='/vendors'>Return to Vendor list</a></p>
    <p><a href='/'>Return to Main Page</a></p>
  </body> 
</html>