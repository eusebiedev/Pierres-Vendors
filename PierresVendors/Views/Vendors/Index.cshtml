  @{
    Layout = "_Layout";
  }
  <body class="p-3 m-5">
    @using PierresVendors.Models;

    <h1>Pierres Vendors:</h1>
    <p><em>(Click Vendor to view current order inventory)</em></p>

    @if (@Model.Count == 0)
    {
      <h4>No vendors have been added yet. Be the first!</h4>
    } 

    @foreach (Vendor vendor in Model)
    {
      <h4><a href='/vendors/@vendor.Id'>@vendor.Name</a></h4>
      <p>@vendor.Description</p>
    }
    <p><a href='/vendors/new'>Add your company as a Vendor!</a></p>
    <p><a href='/'>Back home</a></p>
  </body>
</html>